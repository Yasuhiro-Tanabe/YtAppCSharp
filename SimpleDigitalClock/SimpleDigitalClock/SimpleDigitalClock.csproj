    <UseWPF>true</UseWPF>
    <ApplicationIcon>SimpleDigitalClock.ico</ApplicationIcon>
    <AssemblyVersion>1.3.0.0</AssemblyVersion>
    <FileVersion>1.3.0.0</FileVersion>
    <PlatformTarget>x64</PlatformTarget>
    <Platforms>AnyCPU;x64</Platforms>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Fonts\DSEG7Modern-Bold.ttf" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Fonts\DSEG7Modern-Bold.ttf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="doc\Installer\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Fonts\DSEG-LICENSE.txt">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Update="Fonts\fonts-DSEG_v046.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

