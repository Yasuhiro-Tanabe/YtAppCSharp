<UserControl x:Class="MemorieDeFleurs.UI.WPF.Views.OrderToSupplierListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:h="clr-namespace:MemorieDeFleurs.UI.WPF.Views.Helpers"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding Reload}" CommandParameter="{Binding}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <h:NegativeVisivilityConverter x:Key="negativeVisivilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80px"/>
            <ColumnDefinition Width="120px"/>
            <ColumnDefinition Width="40px"/>
            <ColumnDefinition Width="120px"/>
            <ColumnDefinition Width="40px"/>
            <ColumnDefinition Width="80px"/>
            <ColumnDefinition Width="120px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="発注日："/>
        <DatePicker Grid.Row="0" Grid.Column="1"
                    VerticalAlignment="Center"
                    SelectedDate="{Binding From}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectedDateChanged">
                    <i:InvokeCommandAction Command="{Binding Selected}" CommandParameter="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </DatePicker>
        <TextBlock Grid.Row="0" Grid.Column="2"
                   VerticalAlignment="Center"
                   Text="から"/>
        <DatePicker Grid.Row="0" Grid.Column="3"
                    VerticalAlignment="Center"
                    SelectedDate="{Binding To}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectedDateChanged">
                    <i:InvokeCommandAction Command="{Binding Selected}" CommandParameter="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </DatePicker>
        <TextBlock Grid.Row="0" Grid.Column="4"
                   VerticalAlignment="Center"
                   Text="まで"/>
        <TextBlock Grid.Row="0" Grid.Column="5"
                   VerticalAlignment="Center"
                   Text="仕入先："/>
        <ComboBox Grid.Row="0" Grid.Column="6"
                  VerticalAlignment="Center"
                  ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding Selected}" CommandParameter="{Binding}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding SupplierName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <ListView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="8"
                  Margin="5"
                  BorderBrush="AliceBlue" BorderThickness="2"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto"
                  ItemsSource="{Binding Orders}" SelectedItem="{Binding SelectedOrder}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectionChanged">
                    <i:InvokeCommandAction Command="{Binding Selected}" PassEventArgsToCommand="True"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120px"/>
                            <ColumnDefinition Width="100px"/>
                            <ColumnDefinition Width="100px"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100px"/>
                            <ColumnDefinition Width="100px"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Margin="5,1"
                                   VerticalAlignment="Center"
                                   Text="{Binding OrderID}"/>
                        <TextBlock Grid.Column="1"
                                   Margin="5,1"
                                   VerticalAlignment="Center"
                                   Text="{Binding SupplierName}"/>
                        <TextBlock Grid.Column="2"
                                   Margin="5,1"
                                   VerticalAlignment="Center"
                                   Text="{Binding ArrivalDateText}"/>
                        
                        <TextBlock Grid.Column="3" Grid.ColumnSpan="3"
                                   Margin="5,1"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding ActionVisivility, Converter={StaticResource negativeVisivilityConverter}}"
                                   Text="{Binding OrderParts}" TextWrapping="Wrap"/>

                        <Button Grid.Column="4"
                                Margin="5,1"
                                VerticalAlignment="Center" VerticalContentAlignment="Center"
                                HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                                Content="詳細..."
                                Visibility="{Binding ActionVisivility}"
                                Command="{Binding Detail}" CommandParameter="{Binding}"/>

                        <Button Grid.Column="5"
                                Margin="5,1,20,1"
                                VerticalAlignment="Center" VerticalContentAlignment="Center"
                                HorizontalAlignment="Right" HorizontalContentAlignment="Center"
                                Content="削除"
                                Visibility="{Binding ActionVisivility}"
                                Command="{Binding Remove}" CommandParameter="{Binding}"/>

                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
