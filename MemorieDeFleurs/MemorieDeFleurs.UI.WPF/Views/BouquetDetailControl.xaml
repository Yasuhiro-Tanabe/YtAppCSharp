<UserControl x:Class="MemorieDeFleurs.UI.WPF.Views.BouquetDetailControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:MemorieDeFleurs.UI.WPF.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid Margin="15, 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="20pt"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120px"/>
            <ColumnDefinition Width="120px"/>
            <ColumnDefinition Width="120px"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="花束コード："/>
        <TextBox Grid.Row="0" Grid.Column="1"
                 Margin="5,1"
                 TabIndex="1"
                 VerticalAlignment="Center" VerticalContentAlignment="Center"
                 Text="{Binding BouquetCode}"/>
        <StackPanel Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="3" Orientation="Horizontal"
                    Margin="5, 0, 10, 0"
                    HorizontalAlignment="Right" VerticalAlignment="Center">
            <Button Margin="5, 1"
                    TabIndex="999"
                    Content="検索..."
                    Command="{Binding Reload}" CommandParameter="{Binding}"/>
            <Button Margin="5, 1"
                    TabIndex="1000"
                    Content="登録"
                    Command="{Binding Register}" CommandParameter="{Binding}"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="花束名称："/>
        <TextBox Grid.Row="1" Grid.Column="1"
                 Margin="5,1"
                 TabIndex="2"
                 VerticalAlignment="Center" VerticalContentAlignment="Center"
                 Text="{Binding BouquetName}"/>

        <TextBlock Grid.Row="2" Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="イメージファイル名："/>
        <TextBox Grid.Row="2" Grid.Column="1"
                 Margin="5,1"
                 TabIndex="3"
                 VerticalAlignment="Center" VerticalContentAlignment="Center"
                 Text="{Binding ImageFileName}"/>
        <Button Grid.Row="2" Grid.Column="2"
                Margin="5,1"
                TabIndex="1001"
                HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                VerticalAlignment="Center" VerticalContentAlignment="Center"
                Content="..."
                Command="{Binding SelectImage}" CommandParameter="{Binding}"/>

        <TextBlock Grid.Row="3" Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="受注リードタイム"/>
        <TextBlock Grid.Row="3" Grid.Column="1"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Text="{Binding LeadTime}"/>
        <TextBlock Grid.Row="3" Grid.Column="2"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"
                   Text="日"/>

        <TextBlock Grid.Row="4" Grid.Column="0"
                   VerticalAlignment="Center"
                   Text="商品構成："/>
        <TextBlock Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"
                   VerticalAlignment="Center"
                   Text="{Binding PartsListString}" TextWrapping="Wrap"/>
        <Button Grid.Row="4" Grid.Column="3"
                Margin="5, 1, 15,1"
                HorizontalAlignment="Right" HorizontalContentAlignment="Center"
                VerticalAlignment="Center" VerticalContentAlignment="Center"
                Visibility="{Binding EditingModeVisivility}"
                Content="確定"
                Command="{Binding Fix}" CommandParameter="{Binding}"/>
        <Button Grid.Row="4" Grid.Column="3"
                Margin="5, 1, 15, 1"
                HorizontalAlignment="Right" HorizontalContentAlignment="Center"
                VerticalAlignment="Center" VerticalContentAlignment="Center"
                Visibility="{Binding ViewModeVisivility}"
                Content="編集"
                Command="{Binding Edit}" CommandParameter="{Binding}"/>

        <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="4"
              Margin="10"
              HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
              Visibility="{Binding EditingModeVisivility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="20px"/>
                <RowDefinition Height="180px"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200pt"/>
                <ColumnDefinition Width="120pt"/>
                <ColumnDefinition Width="200pt"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0"
                       VerticalAlignment="Center"
                       Text="現在の商品構成"/>
            <TextBlock Grid.Row="0" Grid.Column="2"
                       VerticalAlignment="Center"
                       Text="単品リスト"/>
            
            <ListView Grid.Row="1" Grid.Column="0"
                      ItemsSource="{Binding SelectedPartListItem}" SelectedItem="{Binding CurrentSelectedInPartsList}"
                      Height="220">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40pt"/>
                                <ColumnDefinition Width="40pt"/>
                                <ColumnDefinition Width="40pt"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       VerticalAlignment="Center"
                                       Text="{Binding PartsCode}"/>
                            <TextBox Grid.Column="1"
                                     VerticalAlignment="Center" HorizontalAlignment="Stretch"
                                     TextAlignment="Right"
                                     Text="{Binding Quantity}"/>
                            <TextBlock Grid.Column="2"
                                       VerticalAlignment="Center"
                                       Text="本"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel Grid.Row="1" Grid.Column="1"
                        Orientation="Vertical" Margin="20,50">
                <Button HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                        VerticalAlignment="Center" VerticalContentAlignment="Center"
                        Content="＜"
                        Command="{Binding Append}" CommandParameter="{Binding}"/>
                <Button HorizontalAlignment="Center" HorizontalContentAlignment="Center"
                        VerticalAlignment="Center" VerticalContentAlignment="Center"
                        Content="＞"
                        Command="{Binding Remove}" CommandParameter="{Binding}"/>
            </StackPanel>
            <ListView Grid.Row="1" Grid.Column="2"
                      ItemsSource="{Binding SelectableParts}" SelectedItem="{Binding CurrentSelectedInSelectablePartsList}"
                      Height="220">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding PartsCode}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </Grid>
</UserControl>
