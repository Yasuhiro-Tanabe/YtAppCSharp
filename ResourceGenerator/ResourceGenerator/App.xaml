<Application x:Class="ResourceGenerator.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ResourceGenerator"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- デフォルトロケールは ja-JP -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ja-JP/ViewItems.xaml"/>
                <ResourceDictionary Source="Resources/ja-JP/Messages.xaml"/>
                <ResourceDictionary Source="Resources/CultureIndependentResources.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
